<!--<h2>User info</h2>-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
<%= render 'users/list', user: @user %>

<!--<h2>New book</h2>-->
<%= render 'books/list', book: @book_show %>
  </div>

  <div class="col-md-8 offset-md-1">


<h1>Book detail</h1>
<table class="table">
  <thead>
    <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %><br />
      <%= link_to @user.name, user_path(@user) %></th>

      <th><%= @book.title %></th>
      <th><%= @book.body %></th>
      <% if @book.user == current_user %>
      <th><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></th>
      <th><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></th>
      <% end %>
  </tr>
  </thead>
</table>

</div>
</div>
</div>
