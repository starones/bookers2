<!--新規作成コード-->
<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>
<!--ここまで-->

<!--投稿一覧-->
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
</table>

<% @books.each do |book| %>
<table>
  <thead>
    <tr>
      <th><%= image_tag('no_image.jpg') %></th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
    </tr>
  </thead>
</table>
<% end %>
<!--ここまで-->
