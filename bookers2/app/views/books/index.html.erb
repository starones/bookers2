<div class="container">
  <!--エラー文-->
<% if @book.errors.any? %>
<div class="text-danger">
<h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
<ul><% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<% end %>
<!--ここまで-->
<div class="row">
   <div class="col-md-3">

<!--<h2>User info</h2>-->
<%= render 'users/list', user: @user %>

<!--<h2>New book</h2>-->
<%= render 'books/list', book: @book %>
</div>

<!--投稿一覧-->
<div class="col-md-8 offset-md-1">
  <table class="table">
<h1>Books</h1>

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>



<% @books.each do |book| %>

  <thead>
    <tr>
        <th><%= link_to user_path(book.user_id) do %>
        <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50' %></th>
      <% end %>
      <th><%= link_to book.title, book_path(book.id) %></th>
      <th><%= book.body %></th>
    </tr>
  </thead>
<% end %>
</table>
<!--ここまで-->


</div>
</div>
</div>