
<h2>User info</h2>
<table>
  <thead class="table">
    <tr>
      <th><%= attachment_image_tag user, :profile_image, :fill, 63, 63, fallback: "no_image.jpg"%></th>
    </tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th><%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block fas edit_user_37813" do %>
      <i class="fas fa-user-cog"></i>
      <% end %></th>
    </tr>
    </thead>
</table>
