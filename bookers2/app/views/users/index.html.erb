<h2>User info</h2>
<%= render 'users/list', user: @user %>

<h2>New book</h2>
<%= render 'books/list', book: @book %>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
</table>


<% @users.each do |user| %>
<table>
  <thead>
    <tr>
      <th><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></th>
      <th><%= user.name %></th>
      <th><%= link_to 'show', user_path(user.id) %></th>
    </tr>
  </thead>
</table>
<% end %>