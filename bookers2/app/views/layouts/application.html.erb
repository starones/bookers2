<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header class="shadow-sm">
     <div class="text-white bg-dark">
     <nav class="navbar navbar-expand-lg navbar-light">
       <div class="container">
         <div class="navbar-brand p-2" ><%= link_to 'Bookers', root_path,class:"text-white bg-dark" %></div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to 'Home', user_path(current_user.id),class:"text-white bg-dark, fas fa-home" %>
    </li>
    <li class="nav-item">
      <%= link_to 'Users', users_path,class:"text-white bg-dark, fas fa-users" %>
    </li>
    <li class="nav-item">
      <%= link_to 'Books', books_path,class:"text-white bg-dark, fas fa-book-open" %>
    </li>
    <li class="nav-item">
      <%= link_to "Log out" ,destroy_user_session_path, method: :delete,class:"text-white bg-dark, fas fa-sign-out-alt" %>
    </li>
    <% else %>
    <li class="nav-item">
       <%= link_to 'Home', root_path,class:"text-white bg-dark, fas fa-home" %>
    </li>
    <li class="nav-item">
      <%= link_to "About", home_about_path,class:"text-white bg-dark, fas fa-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Sign up", new_user_registration_path,class:"text-white bg-dark, fas fa-user-plus" %>
    </li>
    <li class="nav-item">
      <%= link_to "Log in", new_user_session_path,class:"text-white bg-dark, fas fa-sign-in-alt" %>
    </li>
    <% end %>
    </ul>
    </div>
    </div>
    </nav>
    </div>
  </header>



    　<!--フラッシュメッセージ-->
  　<% flash. each do |key, value| %>
  　<%= content_tag(:div, value, class: "#{key}") %>
  　<% end %>
